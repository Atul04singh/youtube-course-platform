<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Settings - <%= user.name %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/sidebar.css" />
    <link rel="stylesheet" href="/mediaquery.css" />
    <link rel="stylesheet" href="/dashcards.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <style>
      .profile-box {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }
      .profile-box img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 15px;
      }
      .course-card {
        background: #fff;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 1rem;
        box-shadow: 0 1px 6px rgba(0, 0, 0, 0.08);
      }
      .course-card h5 {
        margin: 0;
        font-size: 18px;
      }
      .course-card a {
        text-decoration: none;
        color: #007bff;
        font-size: 14px;
      }
    </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Main Content -->
        <div class="main-content">
          <!-- Top Navbar -->
          <%- include('partials/navbar') %>

          <!-- Page Content -->
          <div class="container mt-4">
            <h2 class="mb-4 welcome">Settings</h2>
            <div class="row">
              <!-- Profile Section -->
              <div class="col-md-4">
                <div class="profile-box text-center">
                  <img src="/images/profile.jpeg" alt="Profile" />
                  <h4><%= user.name %></h4>
                  <p><%= user.email %></p>
                  <hr />
                  <p>
                    <strong>Enrolled Courses:</strong> <%=
                    user.enrolledCourses.length %>
                  </p>
                </div>
              </div>

              <!-- Enrolled Courses Section -->
              <div class="col-md-8">
                <h5>Your Enrolled Courses</h5>
                <% if (user.enrolledCourses.length === 0) { %>
                <div class="alert alert-info">
                  You haven't enrolled in any courses yet.
                </div>
                <% } else { %> <% user.enrolledCourses.forEach(course => { %>
                <div class="course-card">
                  <h5><%= course.title %></h5>
                  <a href="/course/<%= course.slug %>">â†’ Go to Course</a>
                </div>
                <% }) %> <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar Toggle -->
    <script>
      const btn = document.querySelector("#btn");
      const sidebar = document.querySelector(".sidebar");
      btn.onclick = () => {
        sidebar.classList.toggle("active");
      };
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
