<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= course.title %> - About Course</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/sidebar.css" />
    <link rel="stylesheet" href="/mediaquery.css" />
    <link rel="stylesheet" href="/dashcards.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <style>
      .card-img-top {
        width: 100%;
        max-height: 200px;
        object-fit: cover;
        border-radius: 8px;
      }

      .curriculum-section h5 {
        margin-top: 1rem;
      }

      .curriculum-section ol li {
        margin-bottom: 1rem;
      }

      .curriculum-section ul {
        margin-left: 20px;
      }
    </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Main Content -->
        <div class="main-content">
          <!-- Top Navigation -->
          <%- include('partials/navbar') %>

          <!-- About Course Content -->
          <div class="container py-5">
            <div class="row">
              <!-- Left Column -->
              <div class="col-md-8 welcome">
                <a href="/home" class="btn btn-outline-secondary btn-sm mb-4">
                  ‚Üê Back to Dashboard
                </a>

                <h2 class="fw-bold mb-3"><%= course.title %></h2>
                <p class="text-muted fs-5"><%= course.description %></p>

                <div class="mt-4 bg-light p-4 rounded shadow-sm">
                  <h4 class="fw-semibold mb-3">üìö What This Batch Includes</h4>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                      <strong>Duration:</strong> <%= course.duration %>
                    </li>
                    <li class="list-group-item">
                      <strong>Schedule:</strong> <%= course.schedule %>
                    </li>
                    <li class="list-group-item">
                      <strong>Video Hours:</strong> <%= course.videoHours %>
                    </li>
                    <li class="list-group-item">
                      <strong>Certificate:</strong>
                      <%= course.certificate ? "Yes" : "No" %>
                    </li>
                  </ul>
                </div>

                <div class="mt-4 bg-white p-4 rounded shadow-sm border">
                  <h4 class="fw-semibold mb-3">üë®‚Äçüè´ Meet Your Instructor</h4>
                  <p class="mb-1 fw-bold text-dark"><%= course.instructor %></p>
                  <p class="text-muted">
                    Our instructor brings top-tier experience from companies
                    like Amazon, Google, and Microsoft to guide your learning
                    journey.
                  </p>
                </div>

                <!-- Curriculum Section -->
                <div class="mt-4 bg-white p-4 rounded shadow-sm border">
                  <h4 class="fw-semibold mb-3">üßæ Course Curriculum</h4>
                  <% if (course.curriculum && course.curriculum.length > 0) { %>
                  <div class="accordion" id="curriculumAccordion">
                    <% course.curriculum.forEach((module, index) => { %>
                    <div class="accordion-item">
                      <h2 class="accordion-header" id="heading<%= index %>">
                        <button
                          class="accordion-button collapsed"
                          type="button"
                          data-bs-toggle="collapse"
                          data-bs-target="#collapse<%= index %>"
                          aria-expanded="false"
                          aria-controls="collapse<%= index %>"
                        >
                          <%= module.module %>
                        </button>
                      </h2>
                      <div
                        id="collapse<%= index %>"
                        class="accordion-collapse collapse"
                        aria-labelledby="heading<%= index %>"
                        data-bs-parent="#curriculumAccordion"
                      >
                        <div class="accordion-body">
                          <ul class="mb-0">
                            <% module.topics.forEach(topic => { %>
                            <li><%= topic %></li>
                            <% }) %>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <% }) %>
                  </div>
                  <% } else { %>
                  <p class="text-muted">No curriculum added yet.</p>
                  <% } %>
                </div>
              </div>

              <!-- Right Column: Sidebar Card -->
              <div class="col-md-4 welcome">
                <div class="card shadow-sm border-0">
                  <% if (course.image) { %>
                  <img
                    src="<%= course.image %>"
                    class="card-img-top"
                    alt="<%= course.title %>"
                    style="height: 220px; object-fit: cover"
                  />
                  <% } %>
                  <div class="card-body">
                    <h5 class="card-title"><%= course.title %></h5>
                    <p class="card-text text-muted mb-3">
                      <%= course.description.substring(0, 100) %>...
                    </p>
                    <% const isEnrolled =
                    user?.enrolledCourses?.includes(course._id.toString()); %>
                    <% if (isEnrolled) { %>
                    <a
                      href="/course/<%= course.slug %>"
                      class="btn btn-success w-100 mb-2"
                    >
                      üé• View Course Content
                    </a>
                    <% } else { %>
                    <form method="POST" action="/enroll/<%= course._id %>">
                      <button type="submit" class="btn btn-primary w-100">
                        üöÄ Enroll Now
                      </button>
                    </form>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar Toggle Script -->
    <script>
      const btn = document.querySelector("#btn");
      const sidebar = document.querySelector(".sidebar");
      btn.onclick = () => {
        sidebar.classList.toggle("active");
      };
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
