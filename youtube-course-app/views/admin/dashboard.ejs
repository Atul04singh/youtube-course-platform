<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark px-4">
      <span class="navbar-brand">ðŸ“Š Admin Panel</span>
      <div>
        <span class="text-white me-3">Welcome, <%= user.name %></span>
        <a href="/admin/logout" class="btn btn-outline-light btn-sm">Logout</a>
      </div>
    </nav>

    <div class="container py-4">
      <h3 class="mb-4">ðŸ“š All Courses</h3>

      <a href="/admin/add-course" class="btn btn-success mb-3"
        >âž• Add New Course</a
      >

      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% courses.forEach(course => { %>
        <div class="col">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p><%= course.videos.length %> videos</p>
              <a href="/admin/edit/<%= course._id %>" class="btn btn-primary"
                >Edit</a
              >
              <a
                href="/aboutcourse/<%= course.slug %>"
                class="btn btn-outline-secondary"
                >View Public</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
